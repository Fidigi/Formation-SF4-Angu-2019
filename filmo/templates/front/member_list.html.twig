{% extends 'base.html.twig' %}

{% block body %}

		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<h1>Members</h1>
					<table class="table table-striped">
						<tr>
							<th>First name</th>
							<th>Last name</th>
							<th></th>
						</tr>
						{% for member in members %}
							<tr>
								<td>{{ member.firstname|e }}</td>
								<td>{{ member.lastname|e }}</td>
								<td><a href="{{ path('app_member_view', {id : member.id}) }}" class="btn btn-primary">Details</a></td>
							</tr>
						{% endfor %}
					</table>
				</div>
			</div>
		</div>
{% endblock %}