{% extends 'base.html.twig' %}
{% block title %}
{{ parent() }}Inchala
{% endblock %}

{% block body %}
{{5|toto(2)}}

{% for key, u in tabAge %}
	{% if u < 12 %}
		<p>{{ loop.index ~ " : " ~ key ~ " / " ~ u }} => -12</p>
	{% elseif u < 18 %}
		<p>{{ loop.index ~ " : " ~ key ~ " / " ~ u }} => -18</p>
	{% else %}
		<p>{{ loop.index ~ " : " ~ key ~ " / " ~ u }} => too old</p>
	{% endif %}
{% endfor %}
<hr>
<table>
{% for event in tabEvent %}
	<tr>
		<td>{{ event.name|e }}</td>
		<td>{{ event.date|date("d M Y", "Europe/Paris") }}</td>
		<td>{{ event.lieu|e }}</td>
	</tr>
{% endfor %}
</table>
<hr>
<select>
{% for event in tabEvent %}
	<option>{{ loop.index ~ " : " ~ event.name ~ " / " ~ event.lieu }}</option>
{% endfor %}
</select>
<br>

{% set tabFoo = {
	1 : 'toto', 
	2 : 'tutu', 
	3 : 'titi', 
	4 : 'tata',
} %}
<hr>
<select>
{% for event in tabFoo %}
	<option>
		{{ loop.index ~ " : " ~ event}}
		{% if loop.index is divisible by(3) %}
			( paire )
		{% else %}
			( impaire )
		{% endif %}
	</option>
{% endfor %}
</select>
<hr>
{{institut}}
{% endblock %}