{% extends 'base.html.twig' %}

{% block body %}
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="row">
						<h1>{{ member.id|e }}</h1>
						<div class="col-xs-2">
							<img src="{{ member.photo|e }}" class="img-responsive img-circle" />
						</div>
						<div class="col-xs-10">
							<p><strong class="text-uppercase">First name :</strong>{{ member.firstname|e }}</p>
							<p><strong class="text-uppercase">Last name :</strong>{{ member.lastname|e }}</p>
							<p><strong class="text-uppercase">Email :</strong> <a href="mailto:{{ member.email|e }}">{{ member.email|e }}</a></p>
						</div>
					</div>
					<div class="row">
						<a href="{{ app.request.headers.get('referer') }}" class="btn btn-primary">Back</a>
					</div>
				</div>
			</div>
		</div>
{% endblock %}